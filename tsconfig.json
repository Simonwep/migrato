{
    "include": ["src/**/*.ts"],
    "references": [{"path": "./tsconfig.node.json"}],
    "compilerOptions": {
        "declarationDir": "dist",
        "declaration": true,
        "target": "esnext",
        "useDefineForClassFields": true,
        "module": "esnext",
        "moduleResolution": "node",
        "emitDeclarationOnly": true,
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext"]
    }
}
